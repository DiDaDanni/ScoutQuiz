<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:id="@+id/question_three">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/question_three"
        android:textSize="24sp"
        style="@style/BlueText"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BlueText"
        android:text="@string/question3"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp" />

    <TableLayout
        android:id="@+id/table_quest3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp">
        <TableRow>
            <ImageButton
                android:id="@+id/img_bipi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/bipi"
                android:padding="20dp"
                android:background="@drawable/imagebutton_select"
                android:onClick="onImageButtonClick"
                />
            <ImageButton
                android:id="@+id/img_oben"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:src="@drawable/oben"
                android:background="@drawable/imagebutton_select"
                android:onClick="onImageButtonClick"/>
        </TableRow>
        <TableRow>
            <ImageButton
                android:id="@+id/img_snoopy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/snoopy"
                android:background="@drawable/imagebutton_select"
                android:padding="5dp"
                android:onClick="onImageButtonClick"/>
            <ImageButton
                android:id="@+id/img_ttt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/ttt"
                android:background="@drawable/imagebutton_select"
                android:padding="5dp"
                android:onClick="onImageButtonClick"/>
        </TableRow>


    </TableLayout>

</LinearLayout>